@model  List<ComicBookStore.Models.ComicBook>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Spiderman";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="container searchbox">



        </div><!-- /.row -->
        <div class="container items">
            <div class="row">
                @foreach (var comic in Model)
                {
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem; height:30rem;">
                            <img class="card-img-top" src=@(comic.Thumbnail.Path + "." + comic.Thumbnail.Extension) alt="Card image cap" height="286" width="286">
                            <div class="card-body">
                                <h5 class="card-title">@comic.SeriesTitle</h5>
                                <p class="card-text text-crop">@comic.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-md-offset-4">

                    <div class="pagination">
                        @if (ViewBag.Page > 0)
                        {
                            <span class="input-group-btn">
                                <button class="btn-pagination" type="button" onclick="location.href='@Url.Action("Index", new { page = ViewBag.Page - 1 })'"> &laquo; Prev  </button>
                            </span>
                        }
                        @if (ViewBag.Page < ViewBag.MaxPage)
                        {
                            <span class="input-group-btn">
                                <button class="btn-pagination" type="button" onclick="location.href='@Url.Action("Index", new { page = ViewBag.Page + 1 })'"> Next &raquo; </button>
                            </span>

                        }
                    </div>
                </div>
            </div>
        </div>
</body>
</html>
